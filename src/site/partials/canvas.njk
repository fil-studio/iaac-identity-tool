<div class="canvas">
    
    <div class="dropzone active block">
      <p class="label">Drop image or video here</p>
    </div>

    <div class="loading">
      <div class="spinner"></div>
    </div>

    <div class="toolbar top">
      <div id="topbar" class="toolbar-block">
        {{ Buttons.standardButton("Edit crop", "button secondary medium floating crop_btn", "crop") }}
        
        <label class="button secondary medium floating" for="zoom">
          {{ Icons.icon("zoom_in") }}
          <select id="zoom">
            <option>25%</option>
            <option selected>50%</option>
            <option>75%</option>
            <option>100%</option>
            <option>125%</option>
            <option>150%</option>
            <option>200%</option>
          </select>
        </label>
      </div>
    </div>
    
    <div class="toolbar bottom">
      <div class="toolbar-block video">
        {% include "video_controls.njk" %}
      </div>
      
      <div id="export" class="toolbar-block active">
        <div class="button secondary medium floating">
          {{ Icons.icon("videocam") }}
          <select>
            <option selected>Video</option>
            <option>Frame</option>
          </select>
        </div>
        
        {{ Buttons.standardButton("Export", "button primary medium floating") }}
      </div>
    </div>
    
    <div class="gl">
      <div class="view">
        <div class="visual-crop-base"></div>
        <div class="visual"></div>
      </div>
    </div>
  </div>